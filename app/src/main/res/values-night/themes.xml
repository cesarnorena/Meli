<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meli" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ash_600</item>
        <item name="colorPrimaryVariant">@color/ash_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/ash_600</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Custom widgets-->
        <item name="searchViewStyle">@style/Theme.Meli.SearchView</item>
        <item name="buttonStyle">@style/Theme.Meli.Button</item>
    </style>

    <style name="Theme.Meli.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="background">@drawable/shape_rounded</item>
        <item name="queryBackground">@color/ash_400</item>
    </style>

    <style name="Theme.Meli.SearchView.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">@color/ash_400</item>
    </style>

    <style name="Theme.Meli.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blue_500</item>
    </style>
</resources>
